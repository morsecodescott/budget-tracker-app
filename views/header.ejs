<!-- views/header.ejs -->
<header>
        <nav>
            <ul>
                <li><h1 class="logo"><a href="/"><%= appName %></a></h1></li>
                <% if (currentUser) { %>
                    <li><a href="/dashboard">Dashboard</a></li>
                    <% if (currentUser.role && currentUser.role === 'admin') { %>
                        <li><a href="/categoryManagement">Category Management</a></li>
                    <% } %>
                    
                    <li class="right"><a href="/auth/logout">Logout</a></li>
                <% } else { %>
                    <li class="right"><a href="/auth/login">Login</a></li>
                    <li class="right"><a href="/auth/register">Register</a></li>
                <% } %>
            </ul>
        </nav>   
</header>
<div id="toastContainer" class="toast-container"></div>
<script src="/js/common.js" defer></script>
